@page
@model ConfirmEmailModel

@{
    ViewBag.Title = "Confirmação de Email";
    Layout = null; // Não usa layout para simplificar
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Confirmação de Email</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .confirm-email-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 1.5rem;
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
        }

        .confirm-email-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 1.5rem;
            text-align: center;
        }

        .confirm-email-header i {
            font-size: 3rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .confirm-email-header h4 {
            margin: 0;
            font-weight: 300;
            font-size: 1.25rem;
        }

        .confirm-email-body {
            padding: 2rem 1.5rem;
        }

        .status-message {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
            border: 1px solid #c3e6cb;
            color: #155724;
            padding: 1rem;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .status-message.error {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .description-text {
            color: #6c757d;
            font-size: 0.875rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 0.75rem;
            padding: 0.75rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.4);
        }

        .links-section {
            border-top: 1px solid #e9ecef;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
        }

        .link-item {
            display: flex;
            align-items: center;
            padding: 0.5rem 0;
            text-decoration: none;
            color: #6c757d;
            transition: all 0.3s ease;
            border-radius: 0.5rem;
        }

        .link-item:hover {
            color: #667eea;
            background-color: rgba(102, 126, 234, 0.1);
            text-decoration: none;
        }

        .link-item i {
            margin-right: 0.5rem;
            font-size: 0.875rem;
        }

        .alert {
            border-radius: 0.75rem;
            border: none;
        }

        .validation-summary-errors {
            background-color: #f8d7da;
            color: #721c24;
            padding: 0.75rem;
            border-radius: 0.75rem;
            margin-bottom: 1rem;
        }

        .success-animation {
            animation: successPulse 2s ease-in-out;
        }

        @@keyframes successPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <div class="confirm-email-container">
        <div class="confirm-email-header">
            <i class="bi bi-envelope-check"></i>
            <h4>Confirmação de Email</h4>
        </div>
        
        <div class="confirm-email-body">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                var isSuccess = Model.StatusMessage.Contains("sucesso") || Model.StatusMessage.Contains("ativada");
                var messageClass = isSuccess ? "status-message" : "status-message error";
                var iconClass = isSuccess ? "bi-check-circle" : "bi-exclamation-triangle";
                
                <div class="@messageClass success-animation">
                    <i class="@iconClass" style="font-size: 2rem; margin-bottom: 1rem; display: block; color: @(isSuccess ? "#28a745" : "#dc3545");"></i>
                    <h5>@(isSuccess ? "Email Confirmado!" : "Erro na Confirmação")</h5>
                    <p class="mb-0">@Model.StatusMessage</p>
                </div>
            }
            else
            {
                <div class="status-message">
                    <i class="bi bi-hourglass-split" style="font-size: 2rem; margin-bottom: 1rem; display: block; color: #0c5460;"></i>
                    <h5>Processando Confirmação</h5>
                    <p class="mb-0">Aguarde enquanto processamos sua confirmação de email...</p>
                </div>
            }
            
            <p class="description-text">
                @if (Model.StatusMessage?.Contains("sucesso") == true)
                {
                    @Html.Raw("<strong>Parabéns!</strong> Sua conta foi ativada com sucesso. <br>Agora você pode fazer login e começar a usar o Marketplace.")
                }
                else if (Model.StatusMessage?.Contains("Erro") == true)
                {
                    @Html.Raw("<strong>Atenção:</strong> Houve um problema ao confirmar seu email. <br>Verifique se o link não expirou ou solicite um novo link de confirmação.")
                }
                else
                {
                    @Html.Raw("<strong>Importante:</strong> A confirmação de email é necessária para ativar sua conta <br>e garantir a segurança do sistema.")
                }
            </p>

            <div class="d-grid mb-3">
                <a asp-page="./Login" class="btn btn-sm btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Ir para o Login
                </a>
            </div>

            <div class="links-section">
                <a asp-page="./Register" class="link-item">
                    <i class="bi bi-person-plus"></i>
                    <span>Criar nova conta</span>
                </a>
                
                <a asp-page="./ResendEmailConfirmation" class="link-item">
                    <i class="bi bi-envelope"></i>
                    <span>Reenviar confirmação</span>
                </a>
                
                <a asp-page="./ForgotPassword" class="link-item">
                    <i class="bi bi-question-circle"></i>
                    <span>Esqueceu a senha?</span>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 