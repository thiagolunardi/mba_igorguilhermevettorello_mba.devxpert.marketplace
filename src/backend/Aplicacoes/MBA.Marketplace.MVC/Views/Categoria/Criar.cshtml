@using MBA.Marketplace.MVC.ViewModels;
@model CategoriaFormViewModel
@{
    ViewData["Title"] = "Cadastrar Categoria";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="criar" method="post" class="needs-validation" novalidate>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control form-control-sm" placeholder="Ex: Eletrônicos" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control form-control-sm" rows="3" placeholder="Descrição da categoria"></textarea>
                <span asp-validation-for="Descricao" class="text-danger small"></span>
            </div>
        </div>

        <div class="card-footer bg-light text-end">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="bi bi-save me-1"></i> Salvar
            </button>
            <a href="@Url.Action("Index", "Categoria")" class="btn btn-outline-secondary btn-sm">
                Cancelar
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (ViewBag.RegistroSucesso == true)
{
    <div class="modal fade show" id="modalSucesso" tabindex="-1" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-sm border-0 rounded-3">
                <div class="modal-header bg-light border-0 rounded-top-3">
                    <h5 class="modal-title text-success fw-semibold">
                        <i class="bi bi-check-circle me-2"></i> Cadastro realizado
                    </h5>
                </div>
                <div class="modal-body text-secondary small">
                    Sua categoria foi criada com sucesso.
                </div>
                <div class="modal-footer bg-light border-0 rounded-bottom-3">
                    <a href="@Url.Action("index", "categoria")" class="btn btn-success btn-sm px-4">
                        Ok
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Backdrop manual -->
    <div class="modal-backdrop fade show"></div>

    <script>
        // Impede que o modal feche com tecla ESC ou clique fora
        document.body.classList.add('modal-open');
        document.body.style.paddingRight = '0px';
    </script>
}

@if (ViewBag.RegistroErro == true)
{
    <div class="modal fade show" id="modalSucesso" tabindex="-1" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-sm border-0 rounded-3">
                <div class="modal-header bg-light border-0 rounded-top-3">
                    <h5 class="modal-title text-danger fw-semibold">
                        <i class="bi bi-check-circle me-2"></i> Falha ao realizar o cadastro
                    </h5>
                </div>
                <div class="modal-body text-secondary small">
                    Ocorreu um erro ao realizar o cadastro de categoria. Tente novamente mais tarde!
                </div>
                <div class="modal-footer bg-light border-0 rounded-bottom-3">
                    <a href="@Url.Action("index", "categoria")" class="btn btn-danger btn-sm px-4">
                        Ok
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Backdrop manual -->
    <div class="modal-backdrop fade show"></div>

    <script>
        // Impede que o modal feche com tecla ESC ou clique fora
        document.body.classList.add('modal-open');
        document.body.style.paddingRight = '0px';
    </script>
}